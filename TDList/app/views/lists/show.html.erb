<p id="notice"><%= notice %></p>

<h3><%= @list.name %> <small><%= @list.list_status %></small></h3>
<h4> With Tasks : 
  <% if @tasks.empty? %>
      none
  <% else %>
		<% @tasks.each do |t| %>
      <small>
			<%= t.description %>
      </small>
		<% end %>
  <% end %>
</h4>

<% if @tasks.empty? %>
  <p class="btn">
  <%= link_to 'Add new task', new_task_path %>
  </p>
<% else %>
  <p class="btn">
    <%= link_to 'Show list', task_path(@list.id) %>
  </p>
  <p class="btn">
    <%= link_to 'Add new task', new_task_path %>
  </p>
<% end %>