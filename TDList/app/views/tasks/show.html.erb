<p id="notice"><%= notice %></p>

<h3><%= @list.name %> 
  <small>
    <dt>
      <ul class="inline">
        <li><%= @list.list_status %></li>
        <li><%= link_to 'Edit List', edit_list_path(@list) %></li>
        </li><%= link_to 'Remove List', @list, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </dt>
  </small>
</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <td><%= link_to "Create New Task", new_task_path %></td>
    </tr>
  	<tr>
  		<th>Task Description</th>
  		<th>Status</th>
  	</tr>
    <legend></legend>
  <% @tasks.each do |t| %>
  <tbody>
    <td><%= link_to t.description, edit_task_path(t) %></td>
    <td><%= link_to t.task_status, edit_task_path(t) %></td>
  </tbody>
  <% end %>
</table>