<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    
    <label>
      <div class="float"><strong>List</strong></div>
      <div class="form_mod float">| </div>
      <%= link_to 'Create New List', '#' %>
    </label> 

    <span><%= f.text_field :id %></span>  
    <!-- this field needs to be a pull down for names of lists --> 

    <label>Task Description</label>
    <span><%= f.text_field :description %></span>

    <label>Task Status</label>
    <span><%= f.text_field :task_status %></span>
    <!-- this field needs to be a pull down for status options --> 
  </form>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>